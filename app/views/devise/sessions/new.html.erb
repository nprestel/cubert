
<h1 class="text-center" style=font-family:cabinregular>Sign In</h1>
<div class="row top60"></div>

<div class="row">
   <div class="span3"></div><!--/.span3-->
    <div class="well span6" align="center">
		<%= simple_form_for(resource, as: resource_name, html: { class: 'form-horizontal' }, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, required: false, autofocus: true %>
		    <%= f.input :password, required: false %>
		    <%= f.input :remember_me, as: :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>
		  </div>
		<div class="row top30"></div>
		  <div class="control-group">
		    <div class="controls"  style="margin-left: 0">
		    	<%= f.button :submit, "Sign in" %>
		  	</div>
		  </div>
		<% end %>
    </div><!--/.well span6-->
   <div class="span3"></div><!--/.span3-->
 </div><!--/.row--> 
<div class="row top30"></div>
<div class="text-center"><%= render "devise/shared/links" %>
</div>
