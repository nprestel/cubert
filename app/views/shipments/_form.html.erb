<%= simple_form_for(@shipment, :html => { :class => 'form-horizontal' 'pull-left' }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :equipment_id, collection: Equipment.all, label_method: :description, value_method: :id, label: "Equipment Type", include_blank: false %>
<%= f.simple_fields_for :pieces, :html => {:class => 'form-horizontal'} do |builder| %>
  <%= render 'piece_fields', f: builder %>
<% end %>
<%= link_to_add_fields "Add Piece", f, :pieces %>
<br />
<br />
  <%= f.button :submit, :class => 'btn-primary' %>

<% end %>