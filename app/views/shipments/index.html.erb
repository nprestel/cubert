<h1>Your Shipment</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Pieces count</th>
      <th>Gross weight lbs</th>
      <th>Gross volume cuft</th>
      <th>Equiptype</th>
      <th>Wt util</th>
      <th>Cb util</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shipments.each do |shipment| %>
      <tr>
        <td><%= shipment.pieces_count %></td>
        <td><%= shipment.gross_weight_lbs %></td>
        <td><%= shipment.gross_volume_cuft %></td>
        <td><%= shipment.equiptype %></td>
        <td><%= shipment.wt_util %></td>
        <td><%= shipment.cb_util %></td>
        <td><%= link_to 'Detail', shipment, class: "btn btn-sm" %></td>
        <td><%= link_to 'Edit', edit_shipment_path(shipment), class: "btn btn-sm" %></td>
        <td><%= link_to 'Destroy', shipment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= 
if !@shipment.nil?
  link_to 'New Shipment', new_shipment_path
end
%>