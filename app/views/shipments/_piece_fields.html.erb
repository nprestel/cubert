<fieldset>
  <%= f.input :piece_name, label: false, placeholder: "Name", :input_html => { :class => "span3" } %>
  <div class="row">
      <div class="span3"><%= f.input :length_ins, label: false, placeholder: "Length" %></div>
      <div class="span3"><%= f.input :width_ins, label: false, placeholder: "Width" %></div>
      <div class="span3"><%= f.input :height_ins, label: false, placeholder: "Height" %></div>
  </div>
  <%= f.input :weight_lbs, label: false, placeholder: "Weight", :input_html => { :class => "span3" } %>
  <%= f.input :stackability, label: false, placeholder: "Stackability", :input_html => { :class => "span3" } %>
  <%= f.input :count, label: false, placeholder: "How many", :input_html => { :class => "span3" } %>
  <%= f.input :_destroy, :as => :boolean, :label => 'Remove Piece' %>

</fieldset>