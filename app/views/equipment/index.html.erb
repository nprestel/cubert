<div class="container">
	<div class="row">
		<h1 class="text-center" style=font-family:cabinregular>Equipment Types</h1>
        <div class="col-lg-12">
            <input class=pull-left type="search" class="form-control" id="input-search" placeholder="Search Equipment Types..." >
            <p class="text-right"><%= link_to 'New Equipment', new_equipment_path, data: { no_turbolink: true } %></p>
            <br>
        </div>
        <% @equipment.each do |equipment| %>
        <div class="searchable-container">
            <div class="items col-xs-12 col-sm-6 col-md-6 col-lg-6 clearfix">
               <div class="info-block block-info clearfix">
                    <div class="square-box pull-left">
                        <span class="glyphicon glyphicon-user glyphicon-lg"><%= image_tag equipment.equip_image(:thumb) %></span>
                    </div>
                    <div><%= link_to equipment.equip_name, equipment_path(equipment) %><span class="pull-right">Max Weight: <%= number_with_precision(equipment.wt_limit_lbs, :precision => 0, :delimiter => ',') %> lbs</span></div>
                    <div><%= truncate(strip_tags(equipment.description), length: 80) %><span class="pull-right">Max Volume: <%= number_with_precision(equipment.cb_limit_cuft, :precision => 0, :delimiter => ',') %> cuft</span></div>
                      
                      <div class="btn-toolbar pull-right">
                          <div class="btn-group">
                            <%= link_to 'Edit', edit_equipment_path(equipment), :class => 'btn btn-mini' %>
                          </div>
                          <div class="btn-group">
                          <%= link_to 'Destroy', equipment_path(equipment), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
                          </div>
                          <div class="btn-group"></div>
                    </div>
                      Mode: <%= equipment.mode %>
                </div>
            </div>
        <% end %>
        <div class="digg_pagination">
          <div class="page_info">
            <%= page_entries_info @posts %>
        </div>
        <%= will_paginate @posts, :container => false %>
  </div>
</div>